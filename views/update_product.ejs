<%- include('include/_header') %>


    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="fillter">
                    <a href="/"> <i class="fas fa-angle-double-left"></i> All Products</a>
                </div>
            </div>
            <div class="form-title text-center">
                <h2 class="text-dark">Update Product</h2>
                <span class="text-light">Use the below form to update product</span>
            </div>

            <form name="myform" method="post" id="update_product">
                <div class="new_product">
                    <div class="form-group">
                        <label for="name" class="text-light">Name</label>
                        <input type="hidden" name="id" value="<%= product.id %>">
                        <input type="text" name="name" value="<%= product.name %> ">
                    </div>
                    <div class="form-group">
                        <label for="name" class="text-light">Price</label>
                        <input type="text" name="price" value="<%= product.price %>">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </main>
    <%- include('include/_footer') %>