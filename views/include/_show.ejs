<% for(var i=0; i<products.length; i++){ %>
    <tr>
        <td>
            <%= i+1 %>
        </td>
        <td>
            <%= products[i].name %>
        </td>
        <td>
            <%= products[i].price %>
        </td>
        <td>
            <a href="/update-product?id=<%= products[i].id %>" class="btn border-shadow update">
                <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
            </a>
            <a class="btn border-shadow delete" data-id=<%=products[i].id %>>
                <span class="text-gradient"><i class="fas fa-minus-circle"></i></span>
            </a>
        </td>
    </tr>
    <% } %>